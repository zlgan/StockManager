/* 商品库存管理小程序 - 共享样式文件 */

/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  background-color: #f5f7fa;
  color: #333;
  font-size: 32rpx;
  line-height: 1.5;
}

/* 容器 */
.container {
  padding-bottom: 120rpx;
}

/* 顶部导航栏 - 统一蓝底白字风格 */
.navbar, .top-nav, .nav-bar {
  background-color: #0052d9;
  color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  top: 0;
  z-index: 100;
  min-height: 88rpx;
}

/* 导航栏左侧区域 */
.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

/* 导航栏右侧区域 */
.nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 返回按钮图标 */
.nav-icon {
  font-size: 40rpx;
  font-weight: normal;
  line-height: 1;
}

/* 导航栏标题 */
.nav-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
}

/* 导航栏内容容器（用于没有返回按钮的页面） */
.nav-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 兼容旧样式 */
.navbar-title {
  font-size: 36rpx;
  font-weight: 600;
}

.back-button {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  color: white;
  font-size: 40rpx;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 400;
  text-align: center;
  border: 2rpx solid transparent;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  line-height: 1.5;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  color: #fff;
  background-color: #0052d9;
  border-color: #0052d9;
}

.btn-primary:active {
  background-color: #003db8;
  border-color: #003db8;
}

.btn-outline {
  color: #0052d9;
  background-color: transparent;
  border-color: #0052d9;
}

.btn-outline:active {
  background-color: #f0f5ff;
}

.btn-secondary {
  color: #666;
  background-color: #f5f7fa;
  border-color: #e0e0e0;
}

.btn-secondary:active {
  background-color: #e8eaed;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
  font-size: 28rpx;
  color: #333;
}

.form-label .required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.form-control {
  display: block;
  width: 100%;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #495057;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.form-control:focus {
  border-color: #0052d9;
  outline: none;
}

.form-control[disabled] {
  background-color: #f5f7fa;
  color: #999;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 统计卡片 */
.stat-card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.stat-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stat-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 列表样式 */
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background-color: white;
}

.list-item:last-child {
  border-bottom: none;
}

.list-content {
  flex: 1;
}

.list-title {
  font-weight: 500;
  margin-bottom: 8rpx;
  font-size: 32rpx;
  color: #333;
}

.list-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.list-meta {
  font-size: 24rpx;
  color: #999;
}

.list-arrow {
  color: #0052d9;
  font-size: 32rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: white;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #0052d9;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #0052d9;
  border-radius: 2rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
}

.search-icon {
  color: #999;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  color: #e0e0e0;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 工具类 */
.text-primary {
  color: #0052d9;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #ff4d4f;
}

.text-muted {
  color: #999;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.mb-0 {
  margin-bottom: 0;
}

.mb-1 {
  margin-bottom: 8rpx;
}

.mb-2 {
  margin-bottom: 16rpx;
}

.mb-3 {
  margin-bottom: 24rpx;
}

.mb-4 {
  margin-bottom: 32rpx;
}

.mt-0 {
  margin-top: 0;
}

.mt-1 {
  margin-top: 8rpx;
}

.mt-2 {
  margin-top: 16rpx;
}

.mt-3 {
  margin-top: 24rpx;
}

.mt-4 {
  margin-top: 32rpx;
}

.p-0 {
  padding: 0;
}

.p-1 {
  padding: 8rpx;
}

.p-2 {
  padding: 16rpx;
}

.p-3 {
  padding: 24rpx;
}

.p-4 {
  padding: 32rpx;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.hidden {
  display: none;
}

/* 响应式网格 */
.grid {
  display: flex;
  flex-wrap: wrap;
  margin: -12rpx;
}

.grid-cols-2 > view {
  width: calc(50% - 24rpx);
  margin: 12rpx;
}

.grid-cols-3 > view {
  width: calc(33.333% - 24rpx);
  margin: 12rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 24rpx 0;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  background-color: #f0f5ff;
  color: #0052d9;
  border: 1rpx solid #d6e4ff;
}

.tag-success {
  background-color: #f6ffed;
  color: #52c41a;
  border-color: #b7eb8f;
}

.tag-warning {
  background-color: #fffbe6;
  color: #faad14;
  border-color: #ffe58f;
}

.tag-danger {
  background-color: #fff2f0;
  color: #ff4d4f;
  border-color: #ffccc7;
}

/* 统一蓝色主题样式 */
.blue-header, .page-header, .header-section {
  background-color: #0052d9;
  color: white;
  padding: 20rpx 32rpx;
}

.blue-button, .primary-button, .action-button {
  background-color: #0052d9;
  color: white;
  border: none;
  padding: 24rpx 32rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.blue-button:active, .primary-button:active, .action-button:active {
  background-color: #003db8;
}

.blue-text {
  color: #0052d9;
}

.blue-bg {
  background-color: #0052d9;
  color: white;
}

/* 导航栏内容样式 */
.nav-content, .header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
}

.nav-title, .header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.nav-back, .back-btn {
  color: white;
  font-size: 40rpx;
}

/* 页面容器统一样式 */
.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
}