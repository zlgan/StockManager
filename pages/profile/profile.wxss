/* 引入共享样式 */
@import "../../styles/shared.wxss";

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.avatar-icon {
  color: white;
  font-size: 48rpx;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
}

.user-id {
  font-size: 26rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 菜单项样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #f5f5f5;
}

.menu-icon {
  font-size: 40rpx;
  color: #1890ff;
  margin-right: 20rpx;
}

.arrow-icon {
  margin-left: auto;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
}

/* 版本信息样式 */
.version-info {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 60rpx;
}

.version-number {
  margin-top: 6rpx;
}

/* 退出登录按钮样式 */
.logout-btn-container {
  margin-top: 40rpx;
}

.logout-btn {
  width: 100%;
  padding: 20rpx 0;
  background-color: #fff;
  color: #ff4d4f;
  font-size: 30rpx;
  font-weight: 500;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}