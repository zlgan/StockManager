/* 引入共享样式 */
@import "/styles/shared.wxss";

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  color: #333;
}

.form-group {
  margin-bottom: 15px;
}

.form-control {
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
}

.btn-group {
  display: flex;
  gap: 10px;
}

.category-list {
  margin-top: 10px;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 16px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 10px;
}

.category-actions {
  display: flex;
  gap: 15px;
}

.action-btn {
  font-size: 14px;
  cursor: pointer;
}

.edit-btn {
  color: #1890ff;
}

.delete-btn {
  color: #ff4d4f;
}

.no-data {
  text-align: center;
  padding: 20px 0;
  color: #999;
}