/* 引入共享样式 */
@import "../../styles/shared.wxss";

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.bg-gray {
  background-color: #f5f7fa;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.required {
  color: #ee0a24;
}

.picker {
  position: relative;
}

.form-row {
  display: flex;
  align-items: center;
}

.form-control-wrapper {
  width: 100%;
}

.form-control {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.flex-grow {
  flex-grow: 1;
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
  border-radius: 0 8rpx 8rpx 0;
  margin-left: -2rpx;
}

.icon-scan::before {
  content: "\e62a";
  font-family: "weui";
}

.icon-add::before {
  content: "\e606";
  font-family: "weui";
  margin-right: 8rpx;
}

.icon-delete::before {
  content: "\e640";
  font-family: "weui";
  margin-right: 8rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #1989fa;
  display: flex;
  align-items: center;
}

.product-card {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
}

.price-input {
  position: relative;
}

.price-symbol {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
}

.price-input .form-control {
  padding-left: 60rpx;
}

.delete-btn {
  text-align: right;
  font-size: 28rpx;
  color: #ee0a24;
  margin-top: 16rpx;
}

.total-card {
  background-color: #f8f8f8;
}

.total-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.total-row:last-child {
  margin-bottom: 0;
}

.total-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #ee0a24;
}

.btn-area {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}