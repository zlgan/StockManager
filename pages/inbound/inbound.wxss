/* 引入共享样式 */
@import "../../styles/shared.wxss";

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.bg-gray {
  background-color: #f5f7fa;
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.required {
  color: #ee0a24;
}

.picker {
  position: relative;
}

/* 重写表单组样式，让label和输入框在同一行 */
.form-group {
  margin-bottom: 22rpx;
  display: flex;
  align-items: center;
}

/* 重写表单组样式，让label和输入框在同一行 */
.form-label {
  display: block;               /* 将标签设为块级元素，独占一行 */
  margin-bottom: 0;             /* 去掉默认的下外边距 */
  margin-right: 10rpx;          /* 右侧留出 20rpx 间距，与输入框分隔 */
  font-weight: 500;             /* 设置字体粗细为中等 */
  font-size: 28rpx;             /* 字体大小设为 28rpx */
  color: #333;                  /* 字体颜色为深灰色 */
  min-width: 140rpx;            /* 最小宽度 140rpx，保证标签内容显示完整 */
  flex-shrink: 0;               /* 禁止在 flex 布局中被压缩，保持固定宽度 */
}

.form-row {
  display: flex;
  align-items: center;
  flex: 1;
}

.form-control-wrapper {
  flex: 1;
}

.form-control {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.flex-grow {
  flex-grow: 1;
  width: 100%;
}

/* 统一的表单元素样式规则 */
picker,
input,
textarea {
  width: 100%;
  box-sizing: border-box;
}

/* picker 特殊样式 */
picker {
  flex: 1;
}

picker .form-control {
  width: 100%;
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f7fa;
  border-radius: 0 8rpx 8rpx 0;
  margin-left: -2rpx;
}

.icon-scan::before {
  content: "\e62a";
  font-family: "weui";
}

.icon-add::before {
  content: "\e606";
  font-family: "weui";
  margin-right: 8rpx;
}

.icon-delete::before {
  content: "\e640";
  font-family: "weui";
  margin-right: 8rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.btn-text {
  font-size: 28rpx;
  color: #1989fa;
  display: flex;
  align-items: center;
}

.product-card {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
}

.product-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
  display: inline-block;
  border-radius: 8rpx;
}

.price-input {
  position: relative;
}

.price-symbol {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
}

.price-input .form-control {
  padding-left: 60rpx;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 20rpx 0;
  text-align: center;
  border-top: 1px solid #f0f0f0;
  margin-top: 20rpx;
}

/* 图片上传样式 */
.image-upload {
  margin-top: 10rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.upload-btn .icon-camera {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.total-card {
  background-color: #f8f8f8;
}

.total-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.total-row:last-child {
  margin-bottom: 0;
}

.total-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #ee0a24;
}

/* 备注字段特殊处理，保持垂直布局 */
.textarea-group {
  display: block !important;
}

.textarea-group .form-label {
  margin-bottom: 16rpx !important;
}

/* 图片上传字段特殊处理，保持垂直布局 */
.image-group {
  display: block !important;
}

.image-group .form-label {
  margin-bottom: 16rpx !important;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #495057;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  box-sizing: border-box;
  resize: none;
}

.btn-area {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.scan-image {
  width: 80rpx;
  height: 80rpx;
}