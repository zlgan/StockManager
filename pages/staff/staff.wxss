/* pages/staff/staff.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.search-container {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.staff-list {
  margin-bottom: 120rpx;
}

.staff-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.staff-info {
  flex: 1;
}

.staff-name,
.staff-realname,
.staff-phone {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.staff-name {
  font-weight: bold;
}

.staff-realname {
  color: #666;
}

.staff-phone {
  color: #999;
  margin-bottom: 0;
}

.arrow-icon {
  width: 0;
  height: 0;
  border-left: 12rpx solid #ccc;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.add-btn {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #007bff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 123, 255, 0.3);
}

.add-icon {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}