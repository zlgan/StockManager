<!--pages/login/login.wxml-->
<view class="container">
  <view class="header">
    <text class="title">欢迎回来</text>
    <text class="subtitle">登录您的账户</text>
  </view>

  <view class="form">
    <view class="input-group">
      <text class="label">用户名</text>
      <input 
        class="input" 
        placeholder="请输入用户名" 
        value="{{username}}" 
        bindinput="onUsernameInput"
        maxlength="20"
      />
    </view>

    <view class="input-group">
      <text class="label">密码</text>
      <input 
        class="input" 
        placeholder="请输入密码" 
        value="{{password}}" 
        bindinput="onPasswordInput"
        password="{{true}}"
        maxlength="20"
      />
    </view>

    <button class="login-btn" bindtap="onLogin" disabled="{{!canLogin}}">
      登录
    </button>

    <view class="register-link">
      <text>还没有账户？</text>
      <text class="link" bindtap="goToRegister">立即注册</text>
    </view>
  </view>
</view>