/* 引入共享样式 */
@import "../../styles/shared.wxss";

/* 容器样式 */
.container {
  padding-bottom: 30rpx;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
  margin-top: 0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1890ff;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: #1890ff;
}

/* 内容区域样式 */
.content-area {
  padding: 20rpx;
}

/* 筛选区域样式 */
.filter-section {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.year-title {
  font-size: 32rpx;
  font-weight: 500;
}

.year-picker {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.stat-count {
  font-size: 22rpx;
  color: #999;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

/* 图表容器 */
.chart-container {
  height: 450rpx;
  position: relative;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.chart-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
}

ec-canvas {
  width: 100%;
  height: 380rpx;
  display: block;
}

/* 表格样式 */
.table-container {
  width: 100%;
  overflow-x: auto;
  margin-top: 40rpx;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.table-header {
  display: flex;
  background-color: #f5f5f5;
  font-weight: 500;
  font-size: 26rpx;
  color: #666;
}

.table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.table-cell {
  flex: 1;
  padding: 16rpx 10rpx;
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
}

.text-right {
  text-align: right;
}

.profit {
  color: #52c41a;
}

/* 库存盘点样式 */
.inventory-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.inventory-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.inventory-summary {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.warning-btn {
  padding: 10rpx 20rpx;
  background-color: #fff1f0;
  color: #f5222d;
  border-radius: 6rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.warning-btn .iconfont {
  margin-right: 6rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 26rpx;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1890ff;
}

/* 分类统计 */
.category-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.category-item {
  background-color: #f5f5f5;
  border-radius: 6rpx;
  padding: 16rpx;
}

.category-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.category-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #1890ff;
  margin-bottom: 6rpx;
}

.category-count {
  font-size: 22rpx;
  color: #999;
}

/* 产品卡片 */
.product-card {
  padding: 0;
  overflow: hidden;
}

.product-info {
  display: flex;
  padding: 20rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.product_details {
  flex: 1;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.detail-btn {
  font-size: 24rpx;
  color: #1890ff;
}

.product-category {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.stock-value {
  color: #333;
  font-weight: 500;
}

.price-value {
  color: #f5222d;
  font-weight: 500;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-container {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-close {
  padding: 10rpx;
}

.modal-content {
  padding: 30rpx;
}

/* 产品详情样式 */
.product_detail-header {
  display: flex;
  margin-bottom: 30rpx;
}

.detail-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
  background-color: #f5f5f5;
}

.detail-info {
  flex: 1;
}

.detail-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.detail-category {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.detail-code {
  font-size: 26rpx;
  color: #999;
}

/* 详情统计 */
.detail-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.detail-stat-item {
  background-color: #f5f5f5;
  border-radius: 6rpx;
  padding: 16rpx;
}

.detail-stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.detail-stat-value {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

/* 库存记录 */
.stock-records {
  margin-bottom: 30rpx;
}

.records-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-date {
  font-size: 26rpx;
  color: #666;
}

.record-quantity {
  font-size: 26rpx;
  font-weight: 500;
}

.record-quantity.in {
  color: #52c41a;
}

.record-quantity.out {
  color: #f5222d;
}

.record-type {
  font-size: 26rpx;
  color: #333;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn .iconfont {
  margin-right: 10rpx;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
}

.btn-outline {
  background-color: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}