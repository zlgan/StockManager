/* 引入共享样式 */
@import "../../styles/shared.wxss";

.container {
  padding-bottom: 30rpx;
}

.search-area {
  padding: 30rpx;
}

.search-input-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input-box .iconfont {
  margin-right: 20rpx;
  color: #999;
}

.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  color: #007bff;
  font-size: 28rpx;
  white-space: nowrap;
}

.btn-icon .iconfont {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.scan-text {
  white-space: nowrap;
}

.scan-image {
  width: 80rpx;
  height: 80rpx;
}

.date-picker-container {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-picker-item {
  flex: 1;
}

.date-separator {
  padding: 0 10rpx;
  color: #666;
}

.date-picker-box {
  position: relative;
  margin-bottom: 0;
}

.date-picker-box .iconfont {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.export-btn {
  color: #1890ff;
  display: flex;
  align-items: center;
}

.export-btn .iconfont {
  margin-right: 10rpx;
}

.bill-list {
  margin-bottom: 30rpx;
}

.bill-card {
  margin-bottom: 20rpx;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-number {
  font-weight: 500;
}

.bill-number.inbound {
  color: #1890ff;
}

.bill-number.outbound {
  color: #ff7a45;
}

.bill-date {
  font-size: 24rpx;
  color: #999;
}

.bill-product {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.product-quantity.inbound {
  color: #1890ff;
}

.product-quantity.outbound {
  color: #ff7a45;
}

.bill-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.bill-type {
  font-size: 24rpx;
  color: #999;
}

.bill-footer {
  font-size: 22rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
}

.success-icon {
  color: #52c41a;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}