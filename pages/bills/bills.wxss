/* 引入共享样式 */
@import "../../styles/shared.wxss";

/* 通用样式 */
.container {
  padding: 30rpx;
  padding-bottom: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单组样式 */
/* 表单组：用于包裹标签与输入控件，保持水平居中并对齐 */
.form-group {
  margin-bottom: 30rpx;  /* 与下一组表单的间距 */
  display: flex;         /* 启用 flex 布局，子元素水平排列 */
  align-items: center;   /* 垂直居中对齐 */
  gap: 10rpx;            /* 标签与输入框之间的水平间距 */
}

.form-label {
  display: inline-flex;
  align-items: center;
  min-width: 110rpx;
  margin-bottom: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 表单元素样式 */
.picker, .input, .textarea, .form-control {
  background-color: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 30rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  transition: border-color 0.3s;
  min-height: 88rpx;
  line-height: 1.4;
}

.picker:focus, .input:focus, .textarea:focus {
  border-color: #007bff;
}

/* 下拉选择器样式：使用 flex 布局，左右留空，垂直居中，最小高度 88rpx，保证点击区域足够 */
.picker {
  display: flex;
  align-items: center;
  height: 88rpx;
  box-sizing: border-box;
}

.picker::after {
  content: '';
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #999;
  margin-left: 20rpx;
}

/* 单行排列容器 */
.form-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.flex-grow {
  flex: 1;
}

/* 搜索区域样式 */
.search-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input-box {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
}

/* 图标样式 */
.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  color: #007bff;
  font-size: 28rpx;
  white-space: nowrap;
}

.icon-scan {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.icon-add {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.icon-delete {
  width: 32rpx;
  height: 32rpx;
}

/* 日期选择器样式 */
.date-picker-container,
.date-range-container {
  display: flex; /* 使用 flex 布局，使子元素水平排列 */
  align-items: center;
  flex: 1;
  gap: 16rpx;
  white-space: nowrap;
}

.date-picker-item {
  flex: 1;
  min-width: 0;
}

.date-separator {
  padding: 0 0rpx;
  color: #666;
  font-size: 28rpx;
  flex-shrink: 0;
}

/* 表单网格布局 */
.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 按钮组样式 */
.btn-group {
  display: flex;
  gap: 20rpx;
}

/* 统计栏样式 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.export-btn {
  color: #1890ff;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.export-btn .icon-export {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 单据列表样式 */
.bill-list {
  margin-bottom: 30rpx;
}

.bill-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.bill-number {
  font-weight: 500;
  font-size: 32rpx;
}

.bill-number.inbound {
  color: #1890ff;
}

.bill-number.outbound {
  color: #ff7a45;
}

.bill-date {
  font-size: 24rpx;
  color: #999;
}

.bill-product {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.product-model {
  font-size: 24rpx;
  color: #666;
}

.product-quantity {
  font-size: 28rpx;
  font-weight: 500;
}

.product-quantity.inbound {
  color: #1890ff;
}

.product-quantity.outbound {
  color: #ff7a45;
}

.bill-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.bill-type {
  font-size: 24rpx;
  color: #999;
}

.bill-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.bill-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bill-creator {
  font-size: 24rpx;
  color: #999;
}

.bill-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  border: none;
  cursor: pointer;
}

.edit-btn {
  background-color: #1890ff;
  color: #fff;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}

/* 空状态样式 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.success-icon {
  color: #52c41a;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

/* 扫码图标样式 */
.scan-image {
  width: 80rpx;
  height: 80rpx;
}
.input-control {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
}

.input-control::placeholder {
  line-height: 88rpx;
}
