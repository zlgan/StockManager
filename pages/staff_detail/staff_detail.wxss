/* pages/staff_detail/staff_detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 30rpx;
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.detail-info {
  font-size: 24rpx;
  color: #999;
}

.form-container {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  min-height: 80rpx;
}

.form-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.input, .textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 20rpx;
  min-height: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.textarea {
  min-height: 120rpx;
  height: 120rpx;
  line-height: 1.4;
}

.input:focus, .textarea:focus {
  border-color: #007bff;
  background-color: #fff;
}

.permission-section {
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #e9ecef;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.permission-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.permission-item:last-child {
  margin-bottom: 0;
}

.permission-label {
  font-size: 28rpx;
  color: #333;
}

.permission-value {
  font-size: 28rpx;
  color: #666;
}

.button-container {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-primary {
  background-color: #007bff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0056b3;
}

.btn-secondary {
  background-color: #6c757d;
  color: #fff;
}

.btn-secondary:active {
  background-color: #545b62;
}