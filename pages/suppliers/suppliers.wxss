/* 引入共享样式 */
@import "../../styles/shared.wxss";

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.search-area {
  margin-bottom: 20rpx;
}

.search-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.input-height {
  height: 80rpx;
  line-height: 80rpx;
}

.form-row {
  display: flex;
  align-items: center;
}

.flex-grow {
  flex-grow: 1;
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.scan-image {
  width: 40rpx;
  height: 40rpx;
}

.btn-center {
  display: flex;
  justify-content: center;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.supplier-list {
  margin-bottom: 30rpx;
}

.supplier-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.supplier-content {
  display: flex;
  width: 100%;
}

.supplier-info {
  flex: 1;
}

.supplier-header {
  display: flex;
  flex-wrap: wrap;
  row-gap: 8rpx;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.supplier-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  word-break: break-all;
}

.supplier-code {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.supplier-contact {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.supplier-address {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.float-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  z-index: 999;
}

.add-btn-image {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}
.form-control {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
}
