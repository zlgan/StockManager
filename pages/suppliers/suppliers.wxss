/* 引入共享样式 */
@import "../../styles/shared.wxss";

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.search-area {
  margin-bottom: 20rpx;
}

.search-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.input-height {
  height: 80rpx;
  line-height: 80rpx;
}

.form-row {
  display: flex;
  align-items: center;
}

.flex-grow {
  flex-grow: 1;
}

.btn-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.scan-image {
  width: 40rpx;
  height: 40rpx;
}

.btn-center {
  display: flex;
  justify-content: center;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.supplier-list {
  margin-bottom: 30rpx;
}

.supplier-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.supplier-content {
  display: flex;
  width: 100%;
}

.supplier-info {
  flex: 1;
}

.supplier-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.supplier-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.supplier-code {
  font-size: 24rpx;
  color: #666;
}

.supplier-contact {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.supplier-address {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.float-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #1890ff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.add-btn-image {
  width: 50rpx;
  height: 50rpx;
}