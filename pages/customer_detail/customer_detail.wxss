/* pages/customer_detail/customer_detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 表单组 */
.form-group {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  margin-top: 26rpx;
  flex-shrink: 0;
}

.form-label.required::after {
  content: "*";
  color: #ff4757;
  margin-left: 4rpx;
}

.form-control-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}

.form-control {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.form-control input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  font-size: 28rpx;
}

/* 文本域样式 */
.textarea-group {
  align-items: flex-start;
}

.textarea-group .form-label {
  margin-top: 20rpx;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
}

/* 选择器样式 */
.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.selected-text {
  color: #333;
  font-size: 28rpx;
  flex: 1;
  margin-right: 10rpx;
  line-height: 40rpx;
  word-wrap: break-word;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
  flex: 1;
  margin-right: 10rpx;
  line-height: 40rpx;
  word-wrap: break-word;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
  align-self: center;
  flex-shrink: 0;
}

/* 已选择产品样式 */
.selected-products {
  margin: 20rpx 0;
  padding-left: 160rpx;
}

.selected-products-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.product-tag {
  display: flex;
  align-items: center;
  background-color: #e6f3ff;
  border: 1rpx solid #007aff;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 24rpx;
  color: #007aff;
  margin-right: 8rpx;
}

.remove-product {
  font-size: 28rpx;
  color: #007aff;
  font-weight: bold;
  cursor: pointer;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(0, 122, 255, 0.1);
}

/* 按钮组 */
.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #ddd;
}

.btn-primary:active {
  background-color: #0056cc;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

/* 产品选择弹窗样式 */
.product-selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-selector-modal {
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx;
}

.product-list {
  display: flex;
  flex-direction: column;
}

.product-item {
  margin-bottom: 20rpx;
}

.product-checkbox {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  background-color: #007aff;
  border-color: #007aff;
}

.checkmark {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.product-price {
  font-size: 24rpx;
  color: #007aff;
  font-weight: 600;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}