<!-- 供应商详情页面 -->
<view class="container">
  <view class="card">
    <form bindsubmit="submitForm">
      <!-- 供应商名称 -->
      <view class="form-group">
        <view class="form-label">供应商名称 <text class="required">*</text></view>
        <input class="form-control" name="name" placeholder="请输入供应商名称" value="{{supplier.name}}" />
      </view>
      
      <!-- 供应商编号 -->
      <view class="form-group">
        <view class="form-label">供应商编号 <text class="required">*</text></view>
        <input class="form-control" name="code" placeholder="请输入供应商编号" value="{{supplier.code}}" />
      </view>
      
      <!-- 供应商地址 -->
      <view class="form-group">
        <view class="form-label">供应商地址</view>
        <input class="form-control" name="address" placeholder="请输入供应商地址" value="{{supplier.address}}" />
      </view>
      
      <!-- 联系人 -->
      <view class="form-group">
        <view class="form-label">联系人</view>
        <input class="form-control" name="contactPerson" placeholder="请输入联系人姓名" value="{{supplier.contactPerson}}" />
      </view>
      
      <!-- 手机号 -->
      <view class="form-group">
        <view class="form-label">手机号</view>
        <input class="form-control" name="phone" placeholder="请输入联系人手机号" value="{{supplier.phone}}" type="number" maxlength="11" />
      </view>
      
      <!-- 备注 -->
      <view class="form-group">
        <view class="form-label">备注</view>
        <textarea class="form-control" name="remark" placeholder="请输入备注信息" value="{{supplier.remark}}" />
      </view>
      
      <!-- 提交按钮 -->
      <view class="btn-group">
        <button class="btn btn-outline" type="button" bindtap="navigateBack">取消</button>
        <button class="btn btn-primary" form-type="submit">保存</button>
      </view>
    </form>
  </view>
</view>