<!--pages/register/register.wxml-->
<view class="container">
  <view class="header">
    <text class="title">创建您的账户</text>
  </view>

  <view class="form">
    <view class="input-group">
      <text class="label">姓名</text>
      <input 
        class="input" 
        placeholder="请输入您的姓名" 
        value="{{name}}" 
        bindinput="onNameInput"
        maxlength="20"
      />
    </view>

    <view class="input-group">
      <text class="label">用户名</text>
      <input 
        class="input" 
        placeholder="请输入用户名" 
        value="{{username}}" 
        bindinput="onUsernameInput"
        maxlength="20"
      />
    </view>

    <view class="input-group">
      <text class="label">密码</text>
      <input 
        class="input" 
        placeholder="请输入密码" 
        value="{{password}}" 
        bindinput="onPasswordInput"
        password="{{true}}"
        maxlength="20"
      />
    </view>

    <view class="input-group">
      <text class="label">确认密码</text>
      <input 
        class="input" 
        placeholder="请再次输入密码" 
        value="{{confirmPassword}}" 
        bindinput="onConfirmPasswordInput"
        password="{{true}}"
        maxlength="20"
      />
    </view>

    <button class="register-btn" bindtap="onRegister" disabled="{{!canRegister}}">
      注册
    </button>

    <view class="login-link">
      <text>已有账户？</text>
      <text class="link" bindtap="goToLogin">立即登录</text>
    </view>
  </view>
</view>